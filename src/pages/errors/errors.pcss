.error {
    font-weight: 500;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
}
.error__title {
    font-size: 40px;
    line-height: 40px;
    margin-bottom: 20px;
}
.error__desc {
    font-size: 20px;
    line-height: 20px;
    margin-bottom: 70px;
}
.error__link {
    font-size: 11px;
    line-height: 11px;
    color: #999999;
    &:hover {
        text-decoration: underline;
    }
}